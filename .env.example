# ── SERVER ────────────────────────────────────────────────────────────────────
# IP publique ou domaine de votre serveur
SERVER_IP=YOUR_SERVER_IP_HERE

# ── LLM (llama-cpp-python) — Dual Model ──────────────────────────────────────
# 14B — qualité (RAG, analyse, code, complexe)
LLM_14B_URL=http://llm-14b:8000
# 3B  — rapide (chat simple, Q&A, résumés)
LLM_3B_URL=http://llm-3b:8001
LLM_KEY=local

# ── LiteLLM ───────────────────────────────────────────────────────────────────
# ⭐ C'est cette clé que vous entrez dans n8n / LangChain / tout client OpenAI
LITELLM_URL=http://litellm:4000
LITELLM_KEY=sk-tython-2025

# ── Qdrant ────────────────────────────────────────────────────────────────────
QDRANT_URL=http://qdrant:6333

# ── Auth JWT (FastAPI) ────────────────────────────────────────────────────────
# Générer: openssl rand -hex 32
JWT_SECRET_KEY=146d916f0b71a4012526ea2556d7a7c5f5e0e8bfb0934849c249cfa71115bd25

# ── API Key (SDK + backend_api.py) ───────────────────────────────────────────
# Générer: python -c "import uuid; print(uuid.uuid4())"
API_KEY=6d6e0d14d667254cdeb9aca0d6fe3786

# ── PostgreSQL ────────────────────────────────────────────────────────────────
POSTGRES_PASSWORD=litellm_password
DATABASE_URL=postgresql://litellm:litellm_password@postgres:5432/litellm_db

# ── Embeddings ────────────────────────────────────────────────────────────────
# Téléchargé automatiquement ~570MB dans ~/.cache/huggingface/
EMBEDDING_MODEL=BAAI/bge-m3

# ── Dashboard ─────────────────────────────────────────────────────────────────
API_BASE_URL=http://api:8888

# ── n8n ───────────────────────────────────────────────────────────────────────
# Générer: openssl rand -hex 16
N8N_ENCRYPTION_KEY=tython-n8n-key-change-me-32chars

# ── Grafana ───────────────────────────────────────────────────────────────────
GRAFANA_PASSWORD=changez-moi-grafana

# ── Ingestion ─────────────────────────────────────────────────────────────────
INGEST_REGISTRY_PATH=.ingest_registry.json

# ── CORS ──────────────────────────────────────────────────────────────────────
# En production: remplacer * par vos domaines
ALLOWED_ORIGINS=*

# ── Slack (optionnel) ─────────────────────────────────────────────────────────
